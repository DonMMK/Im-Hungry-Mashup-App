extends layout

block nav
  a(href = "/")
    button.homeButton Home

block searchbar
  h1.homePagePrompt What food/drink would you like to have today?
  form(action="/yelp", method="GET")
    input(type='text', name='search', placeholder='Search for a restaurant')
    input(type='submit', value='Search')



block content
  h2 Top Recommended Restaurants
  //- #{JSON.stringify(articles)}
  each shop in shops
    .item
      button.shopName #{shop.name}
  
  script(src='/javascripts/summary.js')

